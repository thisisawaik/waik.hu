{
  "hosting": {
    "site": "waik-main",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    
    "rewrites": [
      {
        "source": "/links/**",
        "dynamicLinks": true
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "waik-main-api",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api",
        "run": {
          "serviceId": "waik-main-api",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "waik-main-prod",
          "region": "europe-north1" 
        }
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}
