{
  "hosting": {
    "site": "waik-main-dev",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/links/**",
        "dynamicLinks": true
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "waik-main-api",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api",
        "run": {
          "serviceId": "waik-main-api",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "waik-main-prod",
          "region": "europe-north1" 
        }
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=7200"
        } ]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}
